@model BookRadarFrontEnd.Models.History.ResponseHistory
@{
    ViewData["Title"] = "Index";
}

<div id="divHistory" class="content">
    <section class="content-header">
        <div class="row">
            <div class="col-md-12">
                <h1>Historial de consultas</h1>
                <hr class="my-4" />
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary shadow">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h3 class="card-title m-0">Historial de búsquedas</h3>
                        </div>
                        <div class="card-body">
                            <table id="tblHistory" class="table table-striped table-bordered dt-responsives" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th class="text-center">Título</th>
                                        <th class="text-center">Año de publicación</th>
                                        <th class="text-center">Editorial</th>
                                        <th class="text-center">Autor</th>
                                        <th class="text-center">Fecha de consulta</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var History in Model.HistoryList)
                                    {
                                        <tr align="center">
                                            <td>@History.Titulo</td>
                                            <td>@History.AnioPublicacion</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(History.Editorial))
                                                {
                                                    @History.Editorial
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Sin editorial</span>
                                                }
                                            </td>
                                            <td>@History.Autor</td>
                                            <td>@History.FechaConsulta</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    <script src="~/js/web/HistoryBooks.js" asp-append-version="true"></script>
}
